<div class="row d-flex justify-content-between" id="filter">
    @* izpiši število izdelkov glede na ViewBag. Podrobnosti so v ViewCompontents NewProductsViewComponent.cs*@
    @for (var i = 0; i < ViewBag.NumberOfProducts; i++)
    {
        <div class="col-md-3 my-4 wow animated fadeIn">
            <!-- Card -->
            <div class="card mx-2">

                <!-- Card image -->
                <div class="view overlay">
                    <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/shoes%20(2).jpg"
                         alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

                <!-- Card content -->
                <div class="card-body">

                    <!--Category & Title-->
                    <h5>Shoes</h5>
                    <h4 class="card-title"><strong><a href="">Product name</a></strong></h4>

                    <!--Description-->
                    <p class="card-text">
                        Temporibus autem quibusdam et aut officiis debitis aut rerum necessitatibus saepe
                        eveniet ut et voluptates.
                    </p>

                    <!--Card footer-->
                    <div class="card-footer">
                        <span class="float-left">49$</span>
                        <span class="float-right">
                            <a data-toggle="tooltip" data-placement="top" title="Share"><i class="fas fa-share-alt mr-3"></i></a>
                            <a class="active" data-toggle="tooltip" data-placement="top" title="Added to Wishlist"><i class="fas fa-heart"></i></a>
                        </span>
                    </div>
                </div>

            </div>
            <!-- Card -->
        </div>

    }

</div>
@* izpiši ta div samo, če je število izdelkov 8, ali pa je vklopljen infinite scroll*@
@if (ViewBag.NumberOfProducts != 4 || ViewBag.Infinite == true)
{
    <div id="newProducts">


    </div>
}

