@{
    ViewData["Title"] = "Naslovna stran";
}

@* filter za izpis 4-ih izdelkov ali pa izpis 8-ih z infinite scrollom *@
<!-- Split button -->
<div class="btn-group my-5">
    <button type="button" class="btn btn-danger">Filter</button>
    <button type="button" class="btn btn-danger dropdown-toggle px-3" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>
    </button>
    <div class="dropdown-menu z-depth-2">
        <a class="dropdown-item" onclick="SimulateProducts(8)">Privzeto</a>
        <a class="dropdown-item" onclick="SimulateProducts(4)">Izpiši samo 4</a>


    </div>
</div>

<div class="row d-flex justify-content-between" id="filter">
    @* izpiši prvih osem izdelkov*@
    @for (var i = 1; i < 9; i++)
    {
        <div class="col-md-3 my-4 wow animated fadeIn">
            <!-- Card -->
            <div class="card mx-2">

                <!-- Card image -->
                <div class="view overlay">
                    <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/shoes%20(2).jpg"
                         alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

                <!-- Card content -->
                <div class="card-body">

                    <!--Category & Title-->
                    <h5>Shoes</h5>
                    <h4 class="card-title"><strong><a href="">Product name</a></strong></h4>

                    <!--Description-->
                    <p class="card-text">
                        Temporibus autem quibusdam et aut officiis debitis aut rerum necessitatibus saepe
                        eveniet ut et voluptates.
                    </p>

                    <!--Card footer-->
                    <div class="card-footer">
                        <span class="float-left">49$</span>
                        <span class="float-right">
                            <a data-toggle="tooltip" data-placement="top" title="Share"><i class="fas fa-share-alt mr-3"></i></a>
                            <a class="active" data-toggle="tooltip" data-placement="top" title="Added to Wishlist"><i class="fas fa-heart"></i></a>
                        </span>
                    </div>
                </div>

            </div>
            <!-- Card -->
        </div>

    }
    @* div za izpis novih izdelkov, ko pridemo na dno strani*@
    <div id="newProducts"></div>

</div>


    

